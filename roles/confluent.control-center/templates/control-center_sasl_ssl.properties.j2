# Maintained by Ansible
{% include './includes/base_control-center.properties.j2' %}

confluent.controlcenter.id={{ controlcenter.id }}

confluent.controlcenter.streams.security.protocol=SASL_SSL

#SSL additions
confluent.controlcenter.streams.ssl.truststore.location={{ truststore_path }}
confluent.controlcenter.streams.ssl.truststore.password={{ truststore_password }}
confluent.controlcenter.streams.ssl.keystore.location={{ keystore_path }}/{{ ansible_hostname }}.keystore.jks
confluent.controlcenter.streams.ssl.keystore.password={{ keystore_password }}
confluent.controlcenter.streams.ssl.key.password={{ key_password }}


# https for UI authentication
confluent.controlcenter.rest.ssl.truststore.location={{ truststore_path }}
confluent.controlcenter.rest.ssl.truststore.password={{ truststore_password }}
confluent.controlcenter.rest.ssl.keystore.location={{ keystore_path }}/{{ ansible_hostname }}.keystore.jks
confluent.controlcenter.rest.ssl.keystore.password={{ keystore_password }}
confluent.controlcenter.rest.ssl.key.password={{ key_password }}
confluent.controlcenter.rest.listeners=https://{{ inventory_hostname }}:9021


#SASL additions
confluent.controlcenter.streams.sasl.mechanism=GSSAPI

